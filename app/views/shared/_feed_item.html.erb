<div class="col-sm-3"> 
    <div class="reviewname">     
      <%= link_to user_path(feed_item.user) do %> 
        <%= feed_item.user.first_name %>
        <%= feed_item.user.last_name.truncate(2, omission: '.')%>
      <% end %>
    </div>
    
          <%= image_tag(feed_item.user.smallimage) %>
 
    </div>
      
    <div class="col-sm-9 podreview"> 
      <div class="separatereview">
      <b><%= feed_item.title %>:</b> <br>  
        <div class="reviewcontent"><%= simple_format(feed_item.content) %></div><br>
        
        <div class="bottomreviewicons">
          <%= link_to image_tag('othericons/thumbicon.PNG', height: '20', width: '20'), "#" %>  
          <div class="thumbsdown"><%= link_to image_tag('othericons/thumbiconDown.PNG', height: '20', width: '20'), "#" %></div>
          <div class="flagicon"><%= link_to image_tag('othericons/flagicon.PNG', height: '18', width: '16'), "#" %></div>
        </div>
        
    </div><br>
  </div>
