<div class="row podup"> 
  <div class="col-sm-3"> 
    <%= image_tag @fineart_review.fineart.image_url(:thumb) if @fineart_review.fineart.image? %> 
  </div> 
  
   <div class="col-sm-5"> 
     <div class="podcastnameshow"><%= link_to @fineart_review.fineart.name, fineart_path(@fineart_review.fineart) %></div> <br>
     
   <div class="podinfo">
      <b>Subjects:</b> <%= raw @fineart_review.fineart.tags.map(&:name).map { |t| t }.join(', ') %>
   </div>
     
  </div>
  
  <div class="col-sm-4">
    
    <%= image_tag('othericons/writeRev.png', height: '16', width: '16') %>
    <div class="writeareview">
      <%= link_to "Write a Review", new_fineart_fineart_review_path(@fineart_review.fineart) %>
    </div><br>
    
  </div>
  
</div> <br>