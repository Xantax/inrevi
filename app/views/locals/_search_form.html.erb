<%= form_tag lsearch_path, method: :get do %>
  <div class="qform-actions">
    <%= text_field_tag :tags, nil, data: {category: Factual_Taxonomy.taxonomies , place: PLACES.places + PLACES.neighborhoods}, id: 'tags' %>
    <%= text_field_tag :query, params[:query], placeholder: "e.g. bars, Starbucks, sushi...", class: 'qform-control', id: 'query-text-field' %> <b> in </b>
    <%= text_field_tag :place, params[:place], placeholder: " 'City' or 'Neighborhood City' ", class: 'qform-control', id: 'place-text-field' %>
    <div class="searchstyle"><%= image_submit_tag("searchbutton.PNG", height: '20', width: '20' ) %></div>
  </div>
<% end %>