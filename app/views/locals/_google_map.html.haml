= javascript_tag do
  function initialize() {

  var myplace = new google.maps.LatLng("#{@local['latitude']}", "#{@local['longitude']}");

  var mapOptions = {
  center: myplace,
  zoom: 12
  };
  var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);

  var marker = new google.maps.Marker({
  position: myplace,
  map: map,
  title:"#{@local['name']}"
  });

  }
  google.maps.event.addDomListener(window, 'load', initialize);