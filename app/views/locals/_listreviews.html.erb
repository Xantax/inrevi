<% @local_reviews.each do |local_review| %><br>
  <div class="col-sm-3"> 
    <div class="reviewname">
      <%= link_to user_path(current_user) do %> 
        <%= current_user.first_name %>
        <%= current_user.last_name.truncate(2, omission: '.')%>
      <% end %>
    </div>
    
    <%= image_tag(local_review.user.smallimage) %>
        <div class="inreviews">
              <%= image_tag("othericons/pointicon.PNG", height: '12', width: '12') %> 
          <b><%= local_review.user.local_reviews.count * 5 %></b><br >
              <%= image_tag("othericons/writeRev.png", height: '12', width: '12') %> 
          <b><%= local_review.user.local_reviews.count %></b>
        </div>   
  </div>
      
    <div class="col-sm-9 podreview"> 
      <div class="separatereview">
      <b><%= local_review.title %>:</b> <br>  
        <div class="moviereviewcontent">
          <%= simple_format(local_review.content) %>
        </div><br><br><br>
      </div><br>
    </div>
<% end %>