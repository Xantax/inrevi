<% provide(:title, 'Sign up') %>

<hr>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

            <% if resource.errors.any? %>
              <div id="error_explanation">
                <ul>
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <%= f.text_field :name, placeholder: "name", :class => "form-control mobiletitle" %><br>
            <%= f.text_field :email, placeholder: "email", :class => "form-control mobiletitle" %><br>
            <%= f.password_field :password, placeholder: "password (min. 8 characters)", :class => "form-control mobiletitle" %><br>
            <%= f.password_field :password_confirmation, placeholder: "confirm password ", :class => "form-control mobiletitle" %><br>

            <%= f.submit "Create my account", class: "btn btn-primary btn-lg btn-block", data: { disable_with: "Creating..." } %> 

            <%= f.hidden_field :provider, :value => "email" %>

<% end %>
<hr>