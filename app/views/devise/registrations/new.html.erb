<% provide(:title, 'Sign up') %>

<div class="row">
  
  <div class="col-xs-2 categories">
    <%= render 'shared/categories' %><br><br>
  </div>

  <div class="col-xs-8">
    <div class="homenews">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

            <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control autotitle", :required => true %><br><br>

            <%= f.label :email %>
            <%= f.text_field :email, :class => "form-control autotitle", :required => true %><br><br>

            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "minimum 8 characters", :class => "form-control autotitle", :required => true %><br><br>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, placeholder: "minimum 8 characters", :class => "form-control autotitle", :required => true %><br><br>

            <%= image_tag("othericons/PhotoShow.PNG") %> (profile photo)
            <%= f.file_field :image, :class => "podcastnew" %><br><br>
      
            <%= f.submit "Create my account", class: "btn btn-large btn-default", :onclick => "this.disabled = true" %> 

          <%= f.hidden_field :provider, :value => "email" %>

      <% end %><hr>
    </div>
  </div>

  <div class="col-xs-2"> 
    <%= render 'shared/user_mainprofile' %> 
  </div>

</div>