<% provide(:title, 'Reset password') %>

<div class="row">
  
  <div class="col-xs-2 categories">
    <%= render 'shared/categories' %><br><br>
  </div>

  <div class="col-xs-8">
    <div class="homenews">

          <h4>Change your password</h4>

          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

            <%= f.hidden_field :reset_password_token %>

          <%= f.password_field :password, placeholder: 'password', :required => true, :autofocus => true, :class => "form-control mobiletitle" %><br>
              <%= f.password_field :password_confirmation, placeholder: 'confirm password', :required => true, :class => "form-control mobiletitle" %>

          <br>
            <div class="form-actions">
              <%= f.submit "Change my password", class: 'btn btn-default' %>
            </div>
          <% end %>
      
        <hr>
        <div class="row dumb500"></div>
      
    </div>
  </div>

  <div class="col-xs-2"> 
    <%= render 'shared/user_mainprofile' %> 
  </div>

</div>
