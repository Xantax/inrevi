<% provide(:title, 'Reset password') %>

<div class="row">
  
  <div class="col-xs-2 categories">
    <%= render 'shared/categories' %><br><br>
  </div>

  <div class="col-xs-8">
    <div class="homenews">

            <h4>Forgot your password?</h4>

            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
              <div class="form-inputs">
                <%= f.email_field :email, :required => true, :autofocus => true, :class => "form-control mobiletitle", placeholder: "email" %>
              </div><br>

              <div class="form-actions">
                <%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
              </div>
            <% end %>
        <hr>
        <div class="row dumb500"></div>
      
    </div>
  </div>

  <div class="col-xs-2"> 
    <%= render 'shared/user_mainprofile' %> 
  </div>

</div>
