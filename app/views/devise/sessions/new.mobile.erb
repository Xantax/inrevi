<% provide(:title, 'Sign in') %>
<hr>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.email_field :email, placeholder: "email" , :class => "form-control mobiletitle" %><br>
  <%= f.password_field :password, placeholder: "password", :class => "form-control mobiletitle" %><br>

  <%= f.submit "Sign in", class: "btn btn-default btn-lg btn-block", data: { disable_with: "Signing in..." } %><br><br>

  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me, :checked => true %> <%= f.label :remember_me %>
  <% end %> | 
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
     <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end -%>

<% end %>

<hr>