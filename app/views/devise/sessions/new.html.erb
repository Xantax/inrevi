<% provide(:title, 'Sign in') %>

<div class="row">
  
  <div class="col-xs-2 categories">
    <%= render 'shared/categories' %><br><br>
  </div>

  <div class="col-xs-8">
    <div class="homenews">
      <div class="row">
        <div class="col-xs-9">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div><%= f.label :email %><br />
            <%= f.email_field :email, :class => "form-control login", autofocus: true, :required => true %></div><br>

            <div><%= f.label :password %><br />
              <%= f.password_field :password, :class => "form-control login", autocomplete: "off", :required => true %></div><br>

            <%= f.submit "Sign in", class: "btn btn-large btn-default", data: { disable_with: "Signing in..." }" %><br><br>

            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me, :checked => true %> <%= f.label :remember_me %>
            <% end %> | 
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>

          <% end %>
        </div>
        <div class="col-xs-3 sign-up-signin">
          <h4>New User?</h4><br>
          <%= link_to "Sign up", "/users/sign_up", class: "btn btn-large btn-primary" %>
        </div>
      </div>
        <hr>
        <div class="row dumb500"></div>
      
    </div>
  </div>

  <div class="col-xs-2"> 
    <%= render 'shared/user_mainprofile' %> 
  </div>

</div>
