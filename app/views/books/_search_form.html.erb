<%= form_tag search_path, method: :get, :html => { :class => 'form-horizontal' } do %>
  <div class="form-actions">
    <%= select_tag :category, options_for_select(Book::CATEGORY.map { |key, value| [value, key] }, params[:category]), class: 'btn' %>
    <%= text_field_tag :query, params[:query], placeholder: 'Book', class: 'form-control', id: 'query-text-field' %>
    <%= submit_tag 'Go', :class => 'btn btn-primary' %>
  </div>
<% end %>
