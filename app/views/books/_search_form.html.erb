<div class="booksearchbox">
  <%= form_tag search_path, :method => :get do %>
     <%= text_field_tag :query, params[:query], placeholder: 'by subject, title or author' , :class => "booksearchbutton" %>
      <%= select_tag :category, options_for_select(Book::CATEGORY.map { |key, value| [value, key] }, params[:category]), prompt: "Select", class: 'btn' %>
     <div class="searchstyle"><%= image_submit_tag("searchbutton.PNG", height: '20', width: '20' ) %></div>
  <% end %>
</div>
