<br>
<%= form_tag search_path, method: :get, :html => { :class => 'form-horizontal' } do %>

    <%= text_field_tag :query, params[:query], placeholder: 'by title or author', :class => "form-control mobile-search" %>
<br>
  <%= submit_tag "Go", class: "btn btn-primary" %>

  <% select_tag :category, options_for_select(Book::CATEGORY.map { |key, value| [value, key] }, params[:category] || Book::CATEGORY.keys.first), class: 'btn booksearch'  %>    

<% end %>
