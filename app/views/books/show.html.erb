<h1>
  <%= @book['title'] %>
</h1>
<div class="cover">
  <%= image_tag cover(@book['cover']) %>
</div>
<h4>
  Author:
  <% @book['authors'].each do |author| %>
    <%= link_to author['name'], author['url'] %>
  <% end %>
</h4>
<h5>
  <%= subjects @book['subjects'] %>
</h5>
<h5>
  Number of pages
  <%= @book['number_of_pages'] %>
</h5>
<h5>
  Publisher:
  <%= publishers @book['publishers'] %>
</h5>
<h5>
  Published date:
  <%= @book['publish_date'] %>
</h5>
<h5>
  Published place:
  <%= published_place @book['publish_places'] %>
</h5>

