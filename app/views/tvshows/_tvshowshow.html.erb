<div class="row movieup">  
  <div class="col-sm-3">
    <div class="movieposter">
      
      <% if @tvshow.poster_path.blank? %>
        <%= image_tag("no-image.png") %>
      <% else %>
        <%= image_tag("#{@configuration.base_url}w92#{@tvshow.poster_path}") %>
      <% end %>
      
     </div>
  </div>
  
  <div class="col-sm-5">
    <div class="tvshowfacts">
      <div class="tvtitle"><%= link_to @tvshow.name, tvshow_path(@tvshow.id) %> (<%= @tvshow.first_air_date.to_date.strftime("%Y") %>)</div><br>
      
      <% if @tvshow.episode_run_time.blank? %>
      <% else %>
        <%= image_tag("localicons/clockicon.PNG", height: '14', width: '14') %>
        <% @tvshow.episode_run_time.first(1).each do |run| %>
        <%= run %> min. 
        <% end %><br>
      <% end %>
      
      <% if @tvshow.genres.blank? %>
      <% else %>
        <b>Genres:</b>
        <% @tvshow.genres.each do |genre| %>
          <%= genre['name'] %>.
        <% end %><br>
      <% end %>
            <a target="_blank" href="http://www.amazon.com/gp/search?ie=UTF8&camp=1789&creative=9325&index=dvd&keywords=<%= @tvshow.name %>&linkCode=ur2&tag=movtop0c-20&linkId=F6RC34QQ6YU2Y7AW">Buy it</a><img src="http://ir-na.amazon-adsystem.com/e/ir?t=movtop0c-20&l=ur2&o=1" width="1" height="1" border="0" alt="" style="border:none !important; margin:0px !important;" />
      
      </div>
  </div>
  
  <div class="col-sm-4">
    
        <%= image_tag('othericons/writeRev.png', height: '16', width: '16') %>
        <div class="writeareview">
          <%= link_to "Write a Review", new_tvshow_tvshow_review_path(@tvshow.id) %>
        </div><br>
    
     <div>
     <%= render 'show_rating' %>
     </div>
  
  </div> 
  
</div>