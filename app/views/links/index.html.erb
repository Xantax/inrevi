<%= link_to 'New Link', new_link_path, :class => "btn btn-primary" %><br><br>

<table class="table table-striped table-hover">
  <tr>
    <th>Question</th>
    <th>Link</th>
    <th colspan="1"></th>
  </tr>
 
  <% @links.each do |link| %>
    <tr>
      <td><%= link.text %></td>
      <td><%= link.link %></td>
      <td><%= link_to 'Show', link_path(link) %></td>
    </tr>
  <% end %>
</table>

<div class="digg_pagination">
  <%= will_paginate @links %>
</div>
