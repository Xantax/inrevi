<div class="row movieup">  
  <div class="col-sm-4">
    <div class="movieposter">
      <%= image_tag("#{@configuration.base_url}w92#{@movie.poster_path}") if @movie.poster_path %>
     </div>
  </div>
  
  <div class="col-sm-5">
    <div class="moviefacts">
      <b><%= link_to @movie.title, movie_path(@movie.id) %> (<%= @movie.release_date.to_date.strftime("%Y") %>)</b><br><br>
      <% @trailers['youtube'].first(1).each do |trailer| %>
    		<%= link_to "Trailer", "http://www.youtube.com/watch?v=#{trailer['source']}", :target => "_blank" %><br />
    	<% end %>
      <%= @movie.runtime %> min. <br>
      <b>Genres:</b>
			<% @movie.genres.each do |genre| %>
				<%= genre['name'] %>.
			<% end %><br>
      </div>
  </div>
  
  <div class="col-sm-3">
    <% if signed_in? %>
        <%= link_to "Review it!", new_movie_movie_review_path(@movie.id) %><br><br>
    <% else %>
        <%= link_to "Review it!", "/auth/facebook" %><br><br>
    <% end %>
    <%= image_tag("othericons/PhotoShow.PNG") %> (6) 
    <%= image_tag("othericons/VideoShow.PNG") %> (7)      
  </div>  
</div>