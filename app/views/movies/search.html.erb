<% provide(:title, 'Search results') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
  <div class="col-sm-8">   
    <%= render "media/media/mcategories" %>
      <div class="allnews">
        <%= render 'moviesup' %>            
        <div class="moviesnow">
          <div class="row">
    <% @movie.first(3).each do |movie| %><br><br>
      <% if movie %>
          <%= link_to movie_path(movie.id) do %>          
            <div class="col-sm-4 moviesin">
              <% if movie.poster_path.blank? %>
                <%= image_tag("no-image.png") %>
              <% else %>
                <%= image_tag("#{@configuration.base_url}w154#{movie.poster_path}") %>
              <% end %>
            </div>
            <div class="col-sm-8 moviesin">
              <div class="moviesnowindex">
                <%= movie.title %> (<%= movie.release_date.to_date.try(:year) %>) <br /> 
              </div>
          <% end %>             
            </div>
      <% end %>
    <% end %>           
       </div>
    </div>
  </div>
  
</div>