 <div class="moviesfirst">
    <%= form_tag msearch_path, :method => :get do %>
          <div class="searchbox">
            <%= text_field_tag(:query, nil, :placeholder => "e.g. Fight Club" , class: "form-control search") %>
          </div>
          <div class="searchgo">
            <span class="input-group-btn">
              <%= submit_tag "Go", class: "btn btn-default" %>
            </span>
           </div>
     <% end %>
 </div>

