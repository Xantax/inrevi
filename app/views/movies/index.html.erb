<% provide(:title, 'Movies') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
  <div class="col-sm-8"> 
    <%= render "media/media/mcategories" %>
      <div class="allnews">
        <div class="moviesnow">
          <div class="row">   
    <% @now_playing.first(10).each do |movie| %> <br> <br>
      <% if movie %>
        <%= link_to movie_path(movie['id']) do %> 
          <div class="col-sm-4 tvshowsin">
            <% if movie['poster_path'].blank? %>
              <%= image_tag("no-image.png") %>
            <% else %>
              <%= image_tag("#{@configuration.base_url}w154#{movie['poster_path']}") if movie['poster_path'] %>
            <% end %>
            </div>
           <div class="col-sm-8 tvshowsin">
             <div class="tvshowsnowindex">
             <%= movie['title'] %> (<%= movie['release_date'].to_date.try(:year) %>) <br>
             </div>
        <% end %>                        
           </div> 
      <% end %>
    <% end %>
         </div>
       </div>
     </div>
  </div>
  
  <div class="col-sm-2">
    <%= render 'shared/user_mainprofile' %>
  </div>

  
</div>