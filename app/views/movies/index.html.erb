<% provide(:title, 'Movies') %>

<div class="row">

<div class="col-sm-2 categories">
  <%= render 'shared/categories' %>
</div>
  
<div class="col-sm-8"> 
  <div class="mediacat">  
    <ul>
    <li><%= link_to "books", "#" %></li>
    <li class="listcat"><%= link_to "movies", movies_path %></li>
    <li><%= link_to "TV", "#" %></li>
    <li><%= link_to "games", "#" %></li>
    <li><%= link_to "podcasts", "#" %></li>
    </ul>
  </div>
    <div class="allnews">
      <%= render 'movies/moviesup' %>
      
      <div class="moviesnow">
  <% @now_playing.first(3).each do |movie| %> <br><br>
	<% if movie %>
		<%= link_to movie_path(movie['id']) do %>
			<%= image_tag("#{@configuration.base_url}w154#{movie['poster_path']}") if movie['poster_path'] %>
        <div class="moviesnowindex">
         <%= movie['title'] %> (<%= movie['release_date'].to_date.strftime("%Y") %>) <br> 
		<% end %> 
	<% end %>

          <% end %>
      </div>
   </div>
</div>

<div class="col-sm-2">
  <%= render 'shared/user_mainprofile' %>
</div>

  
</div>