<div class="row">
  <% @all_tech_reviews.each do |all_tech_review| %>
    <div class="col-sm-3">
      <%= link_to user_path(all_tech_review.user) do %> 
        <%= all_tech_review.user.first_name %><br>
      <% end %>
      <%= image_tag(all_tech_review.user.image, width: "80") %>
    </div>
    <div class="col-sm-9">
      <%= link_to all_tech_review.tech.name, all_tech_review.tech %><br>
      <%= all_tech_review.point %><br>
      <%= all_tech_review.content %><br>
      <% all_tech_review.review_images.each do |pic| %>
         <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
      <% end %><br><br>
      <%= all_tech_review.get_upvotes.size %> | <%= all_tech_review.get_downvotes.size %>
            <%= link_to 'Delete', [all_tech_review.tech, all_tech_review],
               method: :delete,
               data: { confirm: 'Are you sure?'},
               class: "btn btn-default" %>
    
      <hr>
    </div>
  <% end %>
</div>

<div class="digg_pagination">
  <%= will_paginate @tech_reviews %>
</div>