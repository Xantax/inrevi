<% provide(:title, "#{@drug.name} Reviews") %>

<hr>

  <div class="row">
    
    <div class="col-xs-6">
      <%= link_to image_tag(@drug.image_url(:thumb)), @drug.image_url, target: :_blank if @drug.image? %>
    </div>

    <div class="col-xs-6"> 
      
      <b><%= link_to @drug.name.truncate(80, omission: '...'), drug_path(@drug) %></b><hr>
      
        <div class="row">
          <div class="col-xs-6"> 
            <%= render 'show_rating' %>
          </div> 
          <div class="col-xs-6">
            <div class="r-clickfeature" id="additional-mobile">
                <%= link_to "info", "#" if @drug.additionalinfo.present? %>
            </div>
          </div>
        </div>
      
    </div>

  </div>

<hr>

    <div class="writeareview mobile">
      <%= image_tag('othericons/writeRev.png', height: '16', width: '16') %>
      <%= link_to "Write a Review", new_drug_drug_review_path(@drug) %>
    </div>
    
    <div class="r-productfeature">
      <%= simple_format(@drug.additionalinfo) if @drug.additionalinfo.present? %><hr>
    </div>

    <div class="row"> 
      <%= render :file => '/drug_reviews/index' %>
    </div>

<script type="text/javascript">
  $('.r-clickfeature').on('click', function(e) {
  return $(".r-productfeature").slideToggle();
});
</script>