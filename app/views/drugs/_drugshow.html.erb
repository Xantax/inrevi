<div class="row autoup"> 
  <div class="col-sm-3"> 
    <%= image_tag @drug.image_url(:thumb) if @drug.image? %> 
  </div> 
  
   <div class="col-sm-5 autoshow"> 
     <b><%= link_to @drug.name, drug_path(@drug) %></b> <br><br>
      <div class="r-clickfeature">
        <%= link_to "additional info", "#" %><br><br>
      </div>
  
  </div>
  
  <div class="col-sm-4">
    
    <%= image_tag('othericons/writeRev.png', height: '16', width: '16') %>
    <div class="writeareview">
      <%= link_to "Write a Review", new_drug_drug_review_path(@drug) %>
    </div><br>
    
     <div>
     <%= render 'show_rating' %>
     </div>
    
  </div>
  
</div> <br>

<div class="r-productfeature">
  <%= simple_format(@drug.additionalinfo) if @drug.additionalinfo.present? %><hr>
</div>

<script type="text/javascript">
  $('.r-clickfeature').on('click', function(e) {
  return $(".r-productfeature").slideToggle();
});
</script>