<%= form_for @drug, :html => {:multipart => true} do |f| %>
  <% if @drug.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @drug.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :name %><br>
    <%= f.text_field :name, :placeholder => "" , :class => "form-control mobiletitle" %><br><br>

    <b>Additional Info</b><br>
    <%= f.text_area :additionalinfo, :placeholder => "write each detail in a new line",
    :class => "form-control mobilecontent" %>
    <br><br>

    <%= image_tag("othericons/PhotoShow.PNG") %>
    <%= f.file_field :image, :placeholder => "e.g. https://imgur.com/Iks3rd" , :class => "podcastnew" %><br><br>

    <%= submit_tag 'Submit', :class => 'btn btn-default' %>

<% end %>