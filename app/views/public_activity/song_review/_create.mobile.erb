<div class="row" align="left">
<% if activity.trackable %>
  
   <% unless activity.owner == @user %>
      <% if activity.owner.provider == "facebook" %>
          <div class="mobile-activity-photo">
            <%= image_tag(activity.owner.image_auth, width: "50") %>
          </div> 
            <div class="reviewname mobile">     
              <%= link_to user_path(activity.owner) do %> 
                <%= activity.owner.first_name %>
                <%= activity.owner.last_name.truncate(2, omission: '.')%>
              <% end %>
            </div>

      <% elsif activity.owner.provider == "google_oauth2" %>
          <div class="mobile-activity-photo">
            <%= image_tag(activity.owner.image_auth, width: "50") %>
          </div> 
            <div class="reviewname mobile">     
              <%= link_to user_path(activity.owner) do %> 
                <%= activity.owner.first_name %>
                <%= activity.owner.last_name.truncate(2, omission: '.')%>
              <% end %>
            </div>

      <% elsif activity.owner.provider == "email" %>
          <div class="mobile-activity-photo">
            <%= image_tag(activity.owner.image, width: "50") %>
          </div> 
            <div class="reviewname mobile">     
              <%= link_to user_path(activity.owner) do %> 
                <%= activity.owner.name %>
              <% end %>
            </div> 
  
      <% elsif activity.owner.provider == "twitter" %>
          <div class="mobile-activity-photo">
            <%= image_tag(activity.owner.image_auth, width: "50") %>
          </div> 
            <div class="reviewname mobile">     
              <%= link_to user_path(activity.owner) do %> 
                <%= activity.owner.name %>
              <% end %>
            </div> 

      <% end %>
   <% end %><br>

      <div class="separatereview">
        
        <%= image_tag('caticons/media/Msongs.PNG') %>    
        <%= link_to activity.trackable.song_name.truncate(25, omission: '...'), "/songs/#{activity.trackable.song_id}" %><br><br>
        
        <div class="numberOne"><%= activity.trackable.point %></div><br><br>
        <div class="reviewcontent">
          <%= auto_link(simple_format(activity.trackable.content), :html => { :target => '_blank'}) %>
        </div>
             <% activity.trackable.review_images.each do |pic| %>
             <%= link_to image_tag(pic.image_url(:thumb), width: 80), pic.image_url, target: :_blank if pic.image? %>
            <% end %> 
              <% if signed_in? %>
                <% unless current_user == activity.owner %>
                  <hr>
                <% end %>
              <% end %>
    
          <div class="bottomreviewicons">
            <% if signed_in? %>
            
                <% if current_user == activity.owner %>
                  <hr><%= link_to image_tag('othericons/rsz_close.png'), song_song_review_path(activity.trackable.song_id, activity.trackable),
                                     method: :delete,
                                     data: { confirm: 'Delete. Are you sure?'} %>
                <% elsif current_user.voted_for? activity.trackable %>
                  Voted!
                <% else %>
                 <div class="thumbsup">
                   <%= link_to "",
                        like_song_song_review_path(activity.trackable.song_id, activity.trackable), 
                        method: :put, :remote => true %>
                 </div>
                          
                 <div class="thumbsdown">
                  <%= link_to "",
                        dislike_song_song_review_path(activity.trackable.song_id, activity.trackable), 
                        method: :put, :remote => true %>
                 </div>
                          
                <% end %> 
            
            <% end %>
          </div>  
      </div><br>

<% end %>
</div>