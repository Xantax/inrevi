<div class="row">
<% if activity.trackable %>
  
   <% if activity.owner == @user %>
      
   <% else %>
  
    <div class="col-sm-3 useronactivity">
      <div class="reviewname">  
      <%= link_to user_path(activity.owner) do %> 
         <%= activity.owner.first_name %>
         <%= activity.owner.last_name.truncate(2, omission: '.')%>
      <% end %>
      </div>
        <%= image_tag(activity.owner.reviewimage) %>  
    </div>
  
   <% end %>

    <div class="col-sm-9 podreview indexreview"> 
      <div class="separatereview">
        
        <%= image_tag('caticons/hover/catauto.PNG', height: '16', width: '16') %>
        
        <% if activity.owner == @user %>
          
        <% else %>
           reviewed
        <% end %>
    
        <%= link_to activity.trackable.auto.name, activity.trackable.auto %><br><br>
    
        <div class="numberOne"><%= activity.trackable.point %></div>
        <div class="reviewtitle"><%= activity.trackable.title %></div><br><br>
        <div class="reviewcontent"><%= simple_format(activity.trackable.content) %></div><br>
    
        <div class="bottomreviewicons">
                <% if current_user == activity.owner %>
                  
                <% elsif current_user.voted_for? activity.trackable %>
                  Voted!
                  <div class="flagicon"><%= link_to image_tag('othericons/flagicon.PNG', height: '16', width: '12'), new_auto_auto_review_report_path(activity.trackable.auto_id, activity.trackable) %></div>
                <% else %>
                 <div class="thumbsup">
                   <%= link_to image_tag('othericons/thumbsup_off.PNG', height: '20', width: '20', id: "imgClickAndChange", :onclick => "window.changeImage($(this))"),  like_auto_auto_review_path(activity.trackable.auto_id, activity.trackable), method: :put, :remote => true %>
                 </div>
                          
                 <div class="thumbsdown">
                  <%= link_to image_tag('othericons/thumbsdown_off.PNG', height: '20', width: '20', id: "imgClickAndChange", :onclick => "window.toggleImage($(this))"), dislike_auto_auto_review_path(activity.trackable.auto_id, activity.trackable), method: :put, :remote => true %>
                 </div>
                          
                 <div class="flagicon"><%= link_to image_tag('othericons/flagicon.PNG', height: '16', width: '12'), new_auto_auto_review_report_path(activity.trackable.auto_id, activity.trackable) %></div>
                <% end %>        
        </div>
        
      </div>
    </div>

<% else %>

<% end %>
</div><br>