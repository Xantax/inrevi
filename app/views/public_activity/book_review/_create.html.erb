<div class="row">
<% if activity.trackable %>
  
   <% unless activity.owner == @user %>
  
      <div class="col-sm-3 useronactivity">
        
        <% if activity.owner.provider == "facebook" %>
          <div class="reviewname">  
            <%= link_to user_path(activity.owner) do %> 
               <%= activity.owner.first_name %>
               <%= activity.owner.last_name.truncate(2, omission: '.')%>
            <% end %>
          </div>
          <%= image_tag(activity.owner.image_auth, width: "80") %>  
        
        <% elsif activity.owner.provider == "google_oauth2" %>
          <div class="reviewname">  
            <%= link_to user_path(activity.owner) do %> 
               <%= activity.owner.first_name %>
               <%= activity.owner.last_name.truncate(2, omission: '.')%>
            <% end %>
          </div>
          <%= image_tag(activity.owner.image_auth, width: "80") %>
        
        <% elsif activity.owner.provider == "email" %>
            <%= link_to user_path(activity.owner) do %> 
               <div class="reviewname"><%= activity.owner.name %></div>
            <% end %>
          <%= image_tag(activity.owner.image, width: "80") %>
        <% end %>
  
      </div>
  
   <% end %>

    <div class="col-sm-9 podreview indexreview"> 
      <div class="separatereview">
        
        <%= image_tag('caticons/media/Mbooks.PNG') %> 
        
        <% if activity.owner == @user %>
          
        <% else %>
           reviewed
        <% end %>
    
        <%= link_to activity.trackable.book_name.truncate(30, omission: '...'), "/books/#{activity.trackable.book_id}" %><br><br>
    
        <div class="numberOne"><%= activity.trackable.point %></div><br><br>
        <div class="reviewcontent">
          <%= auto_link(simple_format(activity.trackable.content), :html => { :target => '_blank'}) %>
        </div>
        
             <% activity.trackable.review_images.each do |pic| %>
              <%= link_to image_tag(pic.image_url(:thumb), width: 100), pic.image_url, target: :_blank if pic.image? %>
            <% end %> 
              <% if signed_in? %>
                <% unless current_user == activity.owner %>
                  <hr>
                <% end %>
              <% end %>
    
          <div class="bottomreviewicons">
            <% if signed_in? %>
            
                <% if current_user == activity.owner %>
                  <hr><%= social_share_button_tag(activity.trackable.content) %>
                  <div class="user-activity-delete">
                      <%= link_to image_tag('othericons/rsz_close.png'), book_book_review_path(activity.trackable.book_id, activity.trackable),
                                     method: :delete,
                                     data: { confirm: 'Delete. Are you sure?'} %>
                  </div>
                <% elsif current_user.voted_for? activity.trackable %>
                  Voted!
                <% else %>
                 <div class="thumbsup">
                   <%= link_to "",  like_book_book_review_path(activity.trackable.book_id, activity.trackable), method: :put, :remote => true %>
                 </div>
                          
                 <div class="thumbsdown">
                  <%= link_to "", dislike_book_book_review_path(activity.trackable.book_id, activity.trackable), method: :put, :remote => true %>
                 </div>
                          
                <% end %> 
            
                      <% if can? :destroy, BookReview %>
                        <hr>
                            <%= activity.trackable.get_upvotes.size %> | <%= activity.trackable.get_downvotes.size %>
                            <%= link_to 'Delete', book_book_review_path(activity.trackable.book_id, activity.trackable),
                                     method: :delete,
                                     data: { confirm: 'Are you sure?'},
                                     class: "btn btn-default" %>
                      <% end %>            
            
            <% end %>
          </div>
        
      </div><br>
    </div>

<% end %>
</div>