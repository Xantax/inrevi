          <%= auto_link(simple_format(activity.trackable.content), :html => { :target => '_blank'}) %>
        </div>
             <% activity.trackable.review_images.each do |pic| %>
             <%= link_to image_tag(pic.image_url(:thumb), width: 80), pic.image_url, target: :_blank if pic.image? %>
            <% end %> 
              <% if signed_in? %>
                <% unless current_user == activity.owner %>
                  <hr>
                <% end %>
              <% end %>
    
          <div class="bottomreviewicons">
            <% if signed_in? %>
            
                <% if current_user == activity.owner %>
                  <hr><% delete_path = "#{activity.trackable.productable_type}_product_review_path('#{activity.trackable.productable_id}', activity.trackable.id)" %>
                      <%= link_to image_tag('othericons/rsz_close.png'), eval(delete_path),
                                     method: :delete,
                                     data: { confirm: 'Delete. Are you sure?'} %>           
                <% elsif current_user.voted_for? activity.trackable %>
                  Voted!
                <% else %>
                 <div class="thumbsup">
                   <%= link_to "",  "/#{activity.trackable.productable_type}s/#{activity.trackable.productable_id}/product_reviews/#{activity.trackable.id}/like", method: :put, :remote => true %>
                 </div>
                          
                 <div class="thumbsdown">
                  <%= link_to "", "/#{activity.trackable.productable_type}s/#{activity.trackable.productable_id}/product_reviews/#{activity.trackable.id}/dislike", method: :put, :remote => true %>
                 </div>
                          
                <% end %> 
            
            <% end %>
