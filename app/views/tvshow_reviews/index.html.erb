<% if @avg_score == 0.0 %>
<div class="noreviewsonindex">No reviews :( </div>
<div class="row dumb500"></div>
<% else %>
<% @tvshow_reviews.each do |tvshow_review| %><br>
    <div class="col-sm-3"> 
      <div class="reviewname">     
        <%= link_to user_path(tvshow_review.user) do %> 
          <%= tvshow_review.user.first_name %>
          <%= tvshow_review.user.last_name.truncate(2, omission: '.')%>
        <% end %>
      </div>    
        <%= image_tag(tvshow_review.user.image, width: "80") %>  
      </div>
        
      <div class="col-sm-9 podreview"> 
         <div class="separatereview">
           
            <div class="numberOne">
              <%= tvshow_review.point %>
            </div><br><br>
           
          <div class="reviewcontent"><%= simple_format(tvshow_review.content) %></div>
           
             <% unless tvshow_review.review_images.empty? %>
                <% tvshow_review.review_images.each do |pic| %>
                     <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
                <% end %>
                 <% if signed_in? %>
                   <% unless current_user == tvshow_review.user %>
                     <hr>
                   <% end %>
                 <% end %>
             <% end %>
           
              <div class="bottomreviewicons">
                <% if signed_in? %>
                
                  <% if current_user == tvshow_review.user %>
                    
                  <% elsif current_user.voted_for? tvshow_review %>
                    Voted!
                  <% else %>
                   <div class="thumbsup">
                     <%= link_to image_tag('othericons/thumbsup_off.PNG'),  like_tvshow_tvshow_review_path(tvshow_review.movie_ident, tvshow_review), method: :put, :remote => true %>
                   </div>
                            
                   <div class="thumbsdown">
                    <%= link_to image_tag('othericons/thumbsdown_off.PNG'), dislike_tvshow_tvshow_review_path(tvshow_review.movie_ident, tvshow_review), method: :put, :remote => true %>
                   </div>
                
                  <% end %>
                
                      <% if allow? "tvshow_reviews", "destroy" %>
                        <hr>
                            <%= tvshow_review.get_upvotes.size %> | <%= tvshow_review.get_downvotes.size %>
                            <%= link_to 'Delete', tvshow_tvshow_review_path(tvshow_review.tvshow_id, tvshow_review),
                                   method: :delete,
                                   data: { confirm: 'Are you sure?'},
                                   class: "btn btn-default" %>
                      <% end %>
                
                <% end %>
                
              </div>
          
      </div><br>
    </div>
  <% end %>
<% end %>

<div class="digg_pagination">
  <%= will_paginate @tvshow_reviews %>
</div>
