<div class="row">
  <% @all_tvshow_reviews.each do |all_tvshow_review| %>
    <div class="col-sm-3">
      <%= link_to user_path(all_tvshow_review.user) do %> 
        <%= all_tvshow_review.user.first_name %><br>
      <% end %>
      <%= image_tag(all_tvshow_review.user.image, width: "80") %>
    </div>
    <div class="col-sm-9">
      <%= link_to all_tvshow_review.tvshow_name, "/tvshows/#{all_tvshow_review.tvshow_id}" %><br>
      <%= all_tvshow_review.point %><br>
      <%= all_tvshow_review.content %><br>
      <% all_tvshow_review.review_images.each do |pic| %>
         <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
      <% end %><br><br>
      <%= all_tvshow_review.get_upvotes.size %> | <%= all_tvshow_review.get_downvotes.size %>
      <%= link_to 'Delete', tvshow_tvshow_review_path(all_tvshow_review.tvshow_id, all_tvshow_review),
               method: :delete,
               data: { confirm: 'Are you sure?'},
               class: "btn btn-default" %>

      <hr>
    </div>
  <% end %>
</div>

<div class="digg_pagination">
  <%= will_paginate @tvshow_reviews %>
</div>