<%= form_for :movie_review, url: movie_movie_reviews_path do |f| %>

<%= f.hidden_field :movie_id, :value => @movie.id %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
<%= f.submit %>
<% end %>

