<%= form_for :movie_review, url: movie_movie_reviews_path do |f| %>


<%= f.hidden_field :movie_id, :value => @movie.id %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => "field podtitle" %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, :class => "field podcontent" %>
  </p>
<%= f.submit " Submit ", :class => "btn btn-primary" %>
<% end %>

