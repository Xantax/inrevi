<% if @avg_score == 0.0 %>
<div class="noreviewsonindex">No reviews :( </div>
<div class="row dumb500"></div>
<% else %>
<% @movie_reviews.each do |movie_review| %><br>
    <div class="col-sm-3"> 
      <div class="reviewname">     
        <%= link_to user_path(movie_review.user) do %> 
          <%= movie_review.user.first_name %>
          <%= movie_review.user.last_name.truncate(2, omission: '.')%>
        <% end %>
      </div>    
        <%= image_tag(movie_review.user.image, width: "80") %>  
      </div>
        
      <div class="col-sm-9 podreview"> 
         <div class="separatereview">
           
            <div class="numberOne">
              <%= movie_review.point %>
            </div><br><br>
           
          <div class="reviewcontent"><%= simple_format(movie_review.content) %></div>
           
             <% unless movie_review.review_images.empty? %>
                <% movie_review.review_images.each do |pic| %>
                     <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
                <% end %>
                 <% if signed_in? %>
                   <% unless current_user == movie_review.user %>
                     <hr>
                   <% end %>
                 <% end %>
             <% end %>
           
              <div class="bottomreviewicons">
                <% if signed_in? %>
                
                  <% if current_user == movie_review.user %>
                    
                  <% elsif current_user.voted_for? movie_review %>
                    Voted!
                  <% else %>
                   <div class="thumbsup">
                     <%= link_to image_tag('othericons/thumbsup_off.PNG'),  like_movie_movie_review_path(movie_review.movie_id, movie_review), method: :put, :remote => true %>
                   </div>
                            
                   <div class="thumbsdown">
                    <%= link_to image_tag('othericons/thumbsdown_off.PNG'), dislike_movie_movie_review_path(movie_review.movie_id, movie_review), method: :put, :remote => true %>
                   </div>
                
                  <% end %>
                
                <% end %>
                
              </div>
          
      </div><br>
    </div>
  <% end %>
<% end %>

<div class="digg_pagination">
  <%= will_paginate @movie_reviews %>
</div>
