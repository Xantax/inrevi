<%= form_for([@drug, @drug_review]) do |f| %>
  <% if @drug_review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@drug_review.errors.count, "error") %> prohibited this from being saved:</h2>

      <ul>
      <% @drug_review.errors.full_messages.each do |msg| %>
