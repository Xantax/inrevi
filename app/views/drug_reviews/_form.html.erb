<%= simple_form_for(@drug_review) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.association :user %>
    <%= f.association :drug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
