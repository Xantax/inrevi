<h1>Listing recipe_reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Recipe</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_reviews.each do |recipe_review| %>
      <tr>
        <td><%= recipe_review.title %></td>
        <td><%= recipe_review.content %></td>
        <td><%= recipe_review.user %></td>
        <td><%= recipe_review.recipe %></td>
        <td><%= link_to 'Show', recipe_review %></td>
        <td><%= link_to 'Edit', edit_recipe_review_path(recipe_review) %></td>
        <td><%= link_to 'Destroy', recipe_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

