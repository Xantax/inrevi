<div class="row">
  <% @all_recipe_reviews.each do |all_recipe_review| %>
    <div class="col-sm-3">
      <%= link_to user_path(all_recipe_review.user) do %> 
        <%= all_recipe_review.user.first_name %><br>
      <% end %>
      <%= image_tag(all_recipe_review.user.image, width: "80") %>
    </div>
    <div class="col-sm-9">
      Recipe: <%= link_to all_recipe_review.recipe.name, all_recipe_review.recipe %><br>
      <%= all_recipe_review.point %><br>
      <%= all_recipe_review.content %><br>
      <% all_recipe_review.review_images.each do |pic| %>
         <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
      <% end %><br><br>
      <%= all_recipe_review.get_upvotes.size %> | <%= all_recipe_review.get_downvotes.size %>
            <%= link_to 'Delete', [all_recipe_review.recipe, all_recipe_review],
               method: :delete,
               data: { confirm: 'Are you sure?'},
               class: "btn btn-primary" %>
    
      <hr>
    </div>
  <% end %>
</div>

<div class="digg_pagination">
  <%= will_paginate @all_recipe_reviews %>
</div>