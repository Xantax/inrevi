<% provide(:title, "#{@tech.name} Reviews") %>

<hr>

  <%= link_to @tech.name.truncate(80, omission: '...'), tech_path(@tech) %><br><br>

  <div class="row">
    
    <div class="col-xs-6">
      <%= link_to image_tag(@tech.image_url(:thumb)), @tech.image_url, target: :_blank if @tech.image? %>
    </div>

    <div class="col-xs-6" align="left"> 
      <%= render 'show_rating' %>
      <div class="podinfo">
        <b>categories:</b> <%= raw @tech.tags.map(&:name).map { |t| t }.join(', ') %>  
      </div>
    </div>

  </div>

<hr>

    <div class="writeareview mobile">
      <%= image_tag('othericons/writeRev.png', height: '16', width: '16') %>
      <%= link_to "Write a Review", new_tech_tech_review_path(@tech) %>
    </div>

    <%= render 'shared/ad_on_item_mobile' %>

  <div class="row"> 
    <%= render :file => '/tech_reviews/index' %>
  </div>