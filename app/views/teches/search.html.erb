<% provide(:title, 'Services, Software...') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
 <div class="col-sm-8">  
   <div class="allnews">

          <%= form_tag teches_search_path, :method => :get do %>
              <div class="searchbox"><%= text_field_tag :search, params[:search], :placeholder => "by category or name" , :class => "form-control" %></div>
              <div class="searchgo"><span class="input-group-btn"><%= submit_tag "Go", class: "btn btn-default" %></span></div>
          <% end %>
     
          <hr>
    
       <% if @teches.empty? %>
          No results! Try something else or <b><%= link_to "+ Add new", new_tech_path() %></b>
       <% else %>
       <div align="right">Useless results? <b><%= link_to "+ Add new", new_tech_path() %></b></div>
          <div class="row tech">      
            <% @teches.each do |tech| %>
              <div class="col-sm-4 techin"><%= image_tag tech.image_url(:thumb) if tech.image? %></div>
              <div class="col-sm-8 techin">
                <div class="techsnowindex"><%= link_to tech.name, tech %></div>
              </div>
          <% end %>
          </div>
     <% end %>
     
    </div>
 </div>
   
  <div class="col-sm-2">
    <%= render 'shared/user_mainprofile' %>
  </div>

</div>

<div class="digg_pagination">
  <%= will_paginate @teches %>
</div>