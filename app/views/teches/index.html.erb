<% provide(:title, 'Services and Software') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
 <div class="col-sm-8"> 
  
  <div class="allnews">
    <div class="techup"> 
      
      <div class="col-sm-11 techsearch"> 
         
          <%= form_tag teches_path, :method => :get do %>
              <%= text_field_tag :search, params[:search], :placeholder => "by category or name" , :class => "techsearchbutton" %>
              <div class="searchstyle"><%= image_submit_tag("searchbutton.PNG", height: '20', width: '20' ) %></div>
          <% end %>
        
      </div>  
          
        <div class="col-sm-1 linkup">
            <b><%= link_to "+ Add", new_tech_path %></b>
        </div>      
     </div>
    
    <div class="row tech">      
        <% @teches.each do |tech| %>
          <div class="col-sm-4 techin"><%= image_tag tech.image_url(:thumb) if tech.image? %></div>
          <div class="col-sm-8 techin">
            <div class="techsnowindex"><%= link_to tech.name, tech %></div>
          </div>
      <% end %>
      </div>
    </div>
 </div>
   
  <div class="col-sm-2">
    <%= render 'shared/user_mainprofile' %>
  </div>

</div>
