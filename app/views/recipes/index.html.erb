<% provide(:title, 'Food and drinks') %>

<div class="row">
    
 <div class="col-sm-8">   
    <div class="allnews">

          <%= form_tag recipes_search_path, :method => :get do %>
      
              <div class="searchbox">
                <%= text_field_tag :search, params[:search], :placeholder => "e.g Cheesecake, Japanese...",
                :class => "form-control search" %>
              </div>
      
              <div class="searchgo">
                <span class="input-group-btn">
                  <%= submit_tag "Go", class: "btn btn-default" %>
                </span>
              </div>
      
          <% end %>
          <hr>
        <div class="row dumb500"></div>
    </div>
 </div>

</div>
