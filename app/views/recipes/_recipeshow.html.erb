<div class="row podup"> 
  <div class="col-sm-3"> 
    <%= link_to image_tag(@recipe.image_url(:thumb)), @recipe.image_url, target: :_blank if @recipe.image? %> 
  </div> 
  
  <div class="col-sm-5 autoshow"> 
    <b><%= @recipe.name %></b><br>
    
    <%= image_tag("localicons/clockicon.PNG", height: '20', width: '20') %>
    <%= @recipe.ready_time %> min.
    <br><br>
    
     <div class="podinfo">
       <b>Categories:</b> <%= raw @recipe.tags.map(&:name).map { |t| t }.join(', ') %>
     </div>
  </div>
  
  <div class="col-sm-4">    
    <%= image_tag('othericons/writeRev.png', height: '16', width: '16') %>
    <div class="writeareview">
      <%= link_to "Write a Review", new_recipe_recipe_review_path(@recipe) %>
    </div>
    
       <div>
         <hr>
         <%= render 'show_rating' %>
       </div>    
  </div>
  
</div> <br>