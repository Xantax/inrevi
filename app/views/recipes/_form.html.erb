<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image %>
    <%= f.association :user %>
    <%= f.input :ingredients %>
    <%= f.input :directions %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
