<% provide(:title, 'Results...') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
 <div class="col-sm-8">  
   <div class="allnews">

          <%= form_tag recipes_search_path, :method => :get do %>
              <div class="searchbox"><%= text_field_tag :search, params[:search], :placeholder => "by category or name" , :class => "form-control" %></div>
              <div class="searchgo"><span class="input-group-btn"><%= submit_tag "Go", class: "btn btn-default" %></span></div>
          <% end %>
     
          <hr>
    
       <% if @recipes.empty? %>
         No results! Try something else or <b><%= link_to "+ Add new", new_recipe_path() %></b>
       <% else %>
       <div align="right">Useless results? <b><%= link_to "+ Add new", new_recipe_path() %></b></div>
          <div class="row tech">      
            <% @recipes.each do |recipe| %>
            <div class="col-sm-4 techin"><%= image_tag recipe.image_url(:thumb) if recipe.image? %></div>
              <div class="col-sm-8 techin">
                <div class="techsnowindex"><%= link_to recipe.name, recipe %></div>
              </div>
          <% end %>
          </div>
     <% end %>
     
    </div>
 </div>
   
  <div class="col-sm-2">
    <%= render 'shared/user_mainprofile' %>
  </div>

</div>

<div class="digg_pagination">
  <%= will_paginate @recipes %>
</div>