<%= nested_form_for([@podcast, @podcast_review], validate: true, html: {multipart: true}, 'data-update-target' => 'comments', class: 'comments') do  |f| %>
  <% if @podcast_review.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @podcast_review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.hidden_field :point %>
  <div class="rating-comments"></div>
  <br>

  <div class="field">
      <%= f.text_area :content, :class => "form-control mobilecontent", 
      :placeholder => "Write a review... ", 
      :onfocus => "this.placeholder = ''" %>
  </div><br>

      <div class="r-image"></div>

      <div class="r-rightside">
        <%= f.fields_for :review_images do |p| %>
            <%= p.file_field :image %>
        <% end %>
      </div>

      <br>
    
      <div class="actions">
        <%= f.submit " Submit ", :class => "btn btn-default", :id => "submit", data: { disable_with: "Uploading..." } %>
      </div><br>

<% end %>

<script type="text/javascript">
        $('.rating-comments').raty({
  click: function(score, evt) {
    $("#podcast_review_point").val(score);
    return console.log(score);
  }
});
</script>

<script type="text/javascript">
  $('.r-image').on('click', function(e) {
  return $(".r-rightside").slideToggle();
});
</script>
