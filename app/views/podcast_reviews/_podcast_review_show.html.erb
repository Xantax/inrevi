<% if current_user == @podcast_review.user %>
  <p id="notice"><%= notice %></p> <div align="center"><%= social_share_button_tag(@podcast_review.content) %></div>
  <hr>
<% else %>
<% if @promotion.present? && @promotion.podcast %>
        <div class="row showpromotion">
          <a href="<%= @promotion.link %>" target="_blank"><%= @promotion.text %></a> 
        </div>
    <% end %>
<% end %>

<div class="row">
  
  <div class="col-sm-3"> 
    <div class="reviewname">     
      <%= link_to user_path(@podcast_review.user) do %> 
        <%= @podcast_review.user.first_name %>
        <%= @podcast_review.user.last_name.truncate(2, omission: '.')%>
      <% end %>
    </div>    
          <%= image_tag(@podcast_review.user.image, width: "80") %>  
  </div>
      
    <div class="col-sm-9 podreview"> 
      <div class="separatereview">
        
         <div class="numberOne">
            <%= @podcast_review.point %>
         </div><br><br>  
        
            <div class="reviewcontent">
              <%= simple_format(@podcast_review.content) %>
            </div><br>
          
             <% unless @podcast_review.review_images.empty? %>
                <% @podcast_review.review_images.each do |pic| %>
                     <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
                <% end %>
                 <% if signed_in? %>
                   <% unless current_user == @podcast_review.user %>
                     <hr>
                   <% end %>
                 <% end %>
             <% end %>
      
        </div><br>
    </div>
  
</div>