<%= nested_form_for(@book_review, url: book_book_reviews_path, validate: true, html: {multipart: true}, 'data-update-target' => 'comments', class: 'comments') do |f| %>
  <% if @book_review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book_review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @book_review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.hidden_field :point %>
    <div class="rating-comments"></div>
    <br>
  
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, :class => "field podtitle", :placeholder => "max. 50 characters", :onfocus => "this.placeholder = ''" %>
    </div><br>
  
    <div class="field">
      <%= f.label :content %><div class="contentcharacters">(minimum 140 characters)</div><br>
      <%= f.text_area :content, :class => "field podcontent", :placeholder => "Tell the world what you like or dislike, give tips and suggestions... ", :onfocus => "this.placeholder = ''" %>
    </div><br>

  <div class="optionalreview">Optional (images):</div>

      <%= f.fields_for :review_images do |p| %>
      <%= image_tag('othericons/PhotoShow.PNG') %>
        <div class="browseimage"><%= p.file_field :image %></div>  
        <div class="removeicon"><%= p.link_to_remove image_tag('othericons/removeicon.PNG') %></div><br><br>
      <% end %>
      <%= f.link_to_add "+ Add another image", :review_images %>

  <br><br><br>
    
      <div class="actions">
        <%= f.submit " Submit ", :class => "btn btn-primary", :id => "submit" %>
      </div><br>
    
      <div id="loading2" class="loadinggif" style="display:none;"><img src="/assets/othericons/uploading.gif" alt="" /></div>

      <%= f.hidden_field :book_id, :value => @book.id if @book.id.present? %>
      <%= f.hidden_field :book_name, :value => @book.title  if @book.title.present? %>
      <%= f.hidden_field :book_authors, :value => @book.authors.first if @book.authors.first.present? %>
      <%= f.hidden_field :book_pages, :value => @book.pageCount if @book.pageCount.present? %>
      <%= f.hidden_field :book_date, :value => @book.publishedDate if @book.publishedDate.present? %>
      <%= f.hidden_field :book_image, :value => @book.imageLinks['thumbnail'] if @book.imageLinks['thumbnail'].present? %>
      <%= f.hidden_field :book_language, :value => @book.language if @book.language.present? %>
      <%= f.hidden_field :isbn_10, :value => @book.isbn_10 if @book.isbn_10.present? %>
      <%= f.hidden_field :isbn_13, :value => @book.isbn_13 if @book.isbn_13.present? %>

<% end %>

<script type="text/javascript">
        $('.rating-comments').raty({
  click: function(score, evt) {
    $("#book_review_point").val(score);
    return console.log(score);
  }
});
</script>

<script type="text/javascript">
(function (d) {
  d.getElementById('new_book_review').onsubmit = function () {
    d.getElementById('submit').style.display = 'block';
    d.getElementById('loading2').style.display = 'block';
  };
}(document));
</script>
