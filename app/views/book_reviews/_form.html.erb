= form_for @book_review do |f|
  - if @book_review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book_review.errors.count, "error")} prohibited this book_review from being saved:"
      %ul
        - @book_review.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
