<% if @avg_score == 0.0 %>
  <div class="noreviewsonindex">No reviews yet :( </div>
<% else %>
  <% @book_reviews.each do |book_review| %><br>

<div class="row">

      <% if book_review.user.provider == "facebook" %>
          <div class="col-xs-3">
            <%= image_tag(book_review.user.image_auth, width: "50") %>
          </div>
          <div class="col-xs-6" align="left">    
              <%= link_to user_path(book_review.user) do %> 
                <%= book_review.user.first_name %>
                <%= book_review.user.last_name.truncate(2, omission: '.')%>
              <% end %>
          </div>

      <% elsif book_review.user.provider == "google_oauth2" %>
          <div class="col-xs-3">
            <%= image_tag(book_review.user.image_auth, width: "50") %>
          </div>
          <div class="col-xs-6" align="left">    
              <%= link_to user_path(book_review.user) do %> 
                <%= book_review.user.first_name %>
                <%= book_review.user.last_name.truncate(2, omission: '.')%>
              <% end %>
          </div>
            
      <% elsif book_review.user.provider == "email" %>
          <div class="col-xs-3">
            <%= image_tag(book_review.user.image, width: "50") %>
          </div>
          <div class="col-xs-6" align="left">    
              <%= link_to user_path(book_review.user) do %> 
                <%= book_review.user.name %>
              <% end %>
          </div>
            
      <% elsif book_review.user.provider == "twitter" %>
          <div class="col-xs-3">
            <%= image_tag(book_review.user.image_auth, width: "50") %>
          </div>
          <div class="col-xs-6" align="left">    
              <%= link_to user_path(book_review.user) do %> 
                <%= book_review.user.name %>
              <% end %>
          </div>
            
      <% end %>

          <div class="col-xs-3">
            <div class="numberOne">
              <%= book_review.point %>
            </div>
          </div>
  
</div>  

         <br>
         <div class="separatereview">
           
          <div class="reviewcontent mobile" align="left"><%= simple_format(book_review.content) %></div>
           
                <% book_review.review_images.each do |pic| %>
                     <%= link_to image_tag(pic.image_url(:thumb), width: 50), pic.image_url, target: :_blank if pic.image?  %>
                <% end %>
                 <% if signed_in? %>
                   <% unless current_user == book_review.user %>
                     <hr>
                   <% end %>
                 <% end %>
           
              <div class="bottomreviewicons">
                <% if signed_in? %>
                
                  <% if current_user == book_review.user %>
                    
                  <% elsif current_user.voted_for? book_review %>
                    Voted!
                  <% else %>
                   <div class="thumbsup">
                     <%= link_to "",  like_book_book_review_path(book_review.book_id, book_review), method: :put, :remote => true %>
                   </div>
                            
                   <div class="thumbsdown">
                    <%= link_to "", dislike_book_book_review_path(book_review.book_id, book_review), method: :put, :remote => true %>
                   </div>
                
                  <% end %>                
                
                <% end %>
                
              </div>
          
      </div><br>

  <% end %>
<% end %>

<div class="digg_pagination">
  <%= will_paginate @book_reviews %>
</div>