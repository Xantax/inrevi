<div class="row">
  <% @all_book_reviews.each do |all_book_review| %>
    <div class="col-sm-3">
      <%= link_to user_path(all_book_review.user) do %> 
        <%= all_book_review.user.first_name %><br>
      <% end %>
      <%= image_tag(all_book_review.user.image, width: "80") %>
    </div>
    <div class="col-sm-9">
       <%= link_to "LINK", "books/#{all_book_review.book_id}" %><br>
      <%= all_book_review.point %><br>
      <%= all_book_review.content %><br>
      <% all_book_review.review_images.each do |pic| %>
         <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
      <% end %><br><br>
      <%= all_book_review.get_upvotes.size %> | <%= all_book_review.get_downvotes.size %>
      <%= link_to 'Delete', [all_book_review.book_id, all_book_review],
               method: :delete,
               data: { confirm: 'Are you sure?'},
               class: "btn btn-primary" %>

      <hr>
    </div>
  <% end %>
</div>