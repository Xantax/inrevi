<div class="row">
  <% @all_local_reviews.each do |all_local_review| %>
    <div class="col-sm-3">
      <%= link_to user_path(all_local_review.user) do %> 
        <%= all_local_review.user.first_name %><br>
      <% end %>
      <%= image_tag(all_local_review.user.image, width: "80") %>
    </div>
    <div class="col-sm-9">
      Local business: <%= link_to "Local LINK", "locals/#{all_local_review.local_id}" %><br>
      <%= all_local_review.point %> - <b><%= all_local_review.title %></b><br>
      <%= all_local_review.content %><br>
      <% all_local_review.review_images.each do |pic| %>
         <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
      <% end %><br><br>
      <%= all_local_review.get_upvotes.size %> | <%= all_local_review.get_downvotes.size %>
      <%= link_to 'Delete', local_local_review_path(all_local_review.local_id, all_local_review),
               method: :delete,
               data: { confirm: 'Are you sure?'},
               class: "btn btn-primary" %>

      <hr>
    </div>
  <% end %>
</div>