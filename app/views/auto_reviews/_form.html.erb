<%= form_for [@auto, @auto_review], 'data-update-target' => 'comments', class: 'comments' do  |f| %>
  <% if @auto_review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@auto_review.errors.count, "error") %> prohibited this auto_review from being saved:</h2>

      <ul>
      <% @auto_review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.hidden_field :point %>
  <div class="rating-comments"></div>
      <br>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => "field podtitle", :placeholder => "max. 50 characters", :onfocus => "this.placeholder = ''" %>
  </div><br>

  <div class="field">
    <%= f.label :content %><div class="contentcharacters">(minimum 140 characters)</div><br>
    <%= f.text_area :content, :class => "field podcontent", :placeholder => "Tell the world what you like or dislike, give tips and suggestions... ", :onfocus => "this.placeholder = ''" %>
  </div><br>

  <div class="optionalreview">Optional:</div>
  <div class="row reviewbottom">

      <%= image_tag("othericons/PhotoShow.PNG") %> + Add images
   
  </div>
  <div class="actions">
    <%= f.submit " Submit ", :class => "btn btn-primary" %>
  </div>

<% end %>

<script type="text/javascript">
        $('.rating-comments').raty({
  click: function(score, evt) {
    $("#auto_review_point").val(score);
    return console.log(score);
  }
});
</script>