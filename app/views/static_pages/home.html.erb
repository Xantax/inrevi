<% provide(:title, 'Just reviews') %>

<% if signed_in? %>

<div class="row">
  
  <div class="col-xs-2"></div>

  <div class="col-xs-8">    
      <div class="homenews">
        <%= render :file => '/activities/index' %>
      </div>    
  </div>

  <div class="col-xs-2"></div>

</div>

 <% else %>

<div class="row">
  
  <div class="col-xs-1"></div>
  
  <div class="col-xs-4">
    <%= image_tag('otherbigimages/sky_boy.png') %>
  </div>
  
  <div class="col-xs-2"></div>
  
  <div class="col-xs-3">
    <p id="notice"><%= notice %></p>
    
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

            <% if resource.errors.any? %>
              <div id="error_explanation">
                <ul>
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <%= f.text_field :name, placeholder: "name", :class => "form-control login", :required => true %><br>
            <%= f.text_field :email, placeholder: "email", :class => "form-control login", :required => true %><br>
            <%= f.password_field :password, placeholder: "password", :class => "form-control login", :required => true %><br>
      
            <div class="create-my-acc">
              <%= f.submit "Create my account", class: "btn btn-large btn-primary", data: { disable_with: "Creating..." } %>
            </div>

            <%= f.hidden_field :provider, :value => "email" %>

      <% end %>
    
  </div>
  
</div>
<br><br>

  <div align="center"><hr>
