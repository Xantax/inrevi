      <div class="col-sm-4">
        <%= image_tag('caticons/Clocal.PNG') %> <div class="adtitle">Local</div>
        <hr>
        <b>Starts at:</b> $0.45/visitor
        <hr>
          <div class="addescription">Promote your local business</div>
        for example: <br><br>
        - restaurants <br>
        - hotels <br>
        - home services <br> 
        ...and <b>many</b> more <hr>
        <%= image_tag('othericons/planicon.PNG') %> <div class="seeplans"><%= link_to "See plans", localads_path %></div>
