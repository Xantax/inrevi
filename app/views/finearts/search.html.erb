<% provide(:title, 'Results...') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
 <div class="col-sm-8">   
  <div class="allnews">

         <%= form_tag finearts_search_path, :method => :get do %>
          <div class="searchbox">
            <%= text_field_tag :search, params[:search], :placeholder => "by name" , :class => "form-control" %>
          </div>
              <div class="searchgo">
                <span class="input-group-btn">
                  <%= submit_tag "Go", class: "btn btn-default" %>
                </span>
              </div>
          <% end %>
    
        <hr>
    
      <% if @finearts.empty? %>
          No results! Try something else or <b><%= link_to "+ Add new", new_fineart_path() %></b>
          <div class="row dumb500"></div>
       <% else %>
      <div class="uselessresults">Useless results? <b><%= link_to "+ Add new", new_fineart_path() %></b></div><br>
        <% @finearts.each do |fineart| %>
          <div class="row">
             <div class="col-sm-4 podsin">
               <%= image_tag fineart.image_url(:thumb) if fineart.image? %>
             </div>
             <div class="col-sm-7 podsin">    
                <div class="podcastsnowindex">
                  <%= link_to fineart.name.truncate(50, omission: '...'), fineart %>
                </div><br>
             </div>
            
              <div class="col-sm-1">
                <% if fineart.fineart_reviews.count >= 1 %>
                 <div class="numberOneindex">
                     <%= ((fineart.fineart_reviews.inject(0) { |sum, e| sum += e.point }).to_f / fineart.fineart_reviews.count).round(1) rescue 0 %>
                 </div>
                <% end %>
              </div>
           
         </div>
        <% end %>
      
          <div class="digg_pagination">
            <%= will_paginate @finearts %>
          </div>      
      
          <div class="row dumb300"></div>
       <% end %>
      
    </div>
  </div>
  
  <div class="col-sm-2">
    <%= render 'shared/user_mainprofile' %>
  </div>
 
</div>