<% provide(:title, 'All Podcasts') %>

      <% @podcasts.each do |podcast| %>
          <div class="row">
            <%= link_to podcast.name, podcast %><br>
            <%= image_tag podcast.image_url(:thumb) if podcast.image? %>  
            <hr>
            <%= link_to 'Show', podcast_path(podcast) %>
            <%= link_to 'Edit', edit_podcast_path(podcast) %>
            <%= link_to 'Destroy', podcast_path(podcast),
                            method: :delete, data: { confirm: 'Are you sure?' } %>
            <hr>
         </div>
      <% end %>