<% provide(:title, 'Podcasts') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
 <div class="col-sm-8">   
  <div class="allnews">

          <%= form_tag podcasts_search_path, :method => :get do %>
              <div class="searchbox"><%= text_field_tag :search, params[:search], :placeholder => "by subject or title" , :class => "form-control" %></div>
              <div class="searchgo"><span class="input-group-btn"><%= submit_tag "Go", class: "btn btn-default" %></span></div>
          <% end %>
    
        <hr>
    
       <% if @podcasts.empty? %>
          No results! Try something else or <b><%= link_to "+ Add new", new_podcast_path() %></b>
       <% else %>
    <div align="right">Useless results? <b><%= link_to "+ Add new", new_podcast_path() %></b></div>
    <div class="row podcast">      
        <% @podcasts.each do |podcast| %>
          <div class="col-sm-4 podsin"><%= image_tag podcast.image_url(:thumb) if podcast.image? %></div>
          <div class="col-sm-8 podsin">
            <div class="podcastsnowindex"><%= link_to podcast.name, podcast %></div>
          </div>
      <% end %>
      </div>
    
    </div>
 </div>
   
  <div class="col-sm-2">
    <%= render 'shared/user_mainprofile' %>
  </div>

</div>

<div class="digg_pagination">
  <%= will_paginate @podcasts %>
</div>