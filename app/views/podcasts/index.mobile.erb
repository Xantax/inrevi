<% provide(:title, 'Podcasts') %>
<hr>
          <%= form_tag podcasts_search_path, :method => :get do %>
              <div class="searchbox mobile">
                <%= text_field_tag :search, params[:search], :placeholder => "by subject or title" , :class => "form-control" %>
              </div>
              <div class="searchgo">
                <span class="input-group-btn">
                  <%= submit_tag "Go", class: "btn btn-default" %>
                </span>
              </div>
          <% end %>
<hr>