<% object_id = "#{@resource_type}_id" %>
<%= form_tag eval("#{@resource_type}_product_reviews_path(#{params[:object_id]})") do |f| %>

  <%= hidden_field_tag :point %>
  <div class="rating-comments"></div>
  <br>

  <div class="field">
    <%= text_area_tag 'content', :class => 'form-control reviewcontent' %>
  </div><br>

      <div class="r-image"></div>

      <div class="r-rightside">
        <%= fields_for :review_images do |p| %>
            <%= p.file_field :image %>
        <% end %>
      </div>

      <br>
    
      <div class="actions">
        <%= submit_tag " Submit ", :class => "btn btn-default", :id => "submit" %>
      </div><br>
    
      <div id="loading2" class="loadinggif" style="display:none;">
        <img src="/assets/othericons/uploading.gif" alt="" />
      </div>
      <div class="row dumb300"></div>
<% end %>

<script type="text/javascript">
        $('.rating-comments').raty({
  click: function(score, evt) {
    $("#product_review_point").val(score);
    return console.log(score);
  }
});
</script>

<script type="text/javascript">
(function (d) {
  d.getElementById('new_product_review').onsubmit = function () {
    d.getElementById('submit').style.display = 'block';
    d.getElementById('loading2').style.display = 'block';
  };
}(document));
</script>

<script type="text/javascript">
  $('.r-image').on('click', function(e) {
  return $(".r-rightside").slideToggle();
});
</script>