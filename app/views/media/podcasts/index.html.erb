<% provide(:title, 'Podcasts') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
 <div class="col-sm-8"> 
   <%= render "media/media/mcategories" %>
  
  <div class="allnews">
    <div class="podcastup"> 
      
      <div class="col-sm-11 podcastsearch"> 
         
          <%= form_tag media_podcasts_path, :method => :get do %>
              <%= text_field_tag :search, params[:search], :placeholder => "by subject or title" , :class => "podcastsearchbutton" %>
              <div class="searchstyle"><%= image_submit_tag("searchbutton.PNG", height: '20', width: '20' ) %></div>
          <% end %>
        
      </div>  
          
        <div class="col-sm-1 linkup">
            <b><%= link_to "+ Add", new_media_podcast_path %></b>
        </div>      
     </div>
    
    <div class="row podcast">      
        <% @podcasts.each do |podcast| %>
          <div class="col-sm-4 podsin"><%= image_tag podcast.image_url(:thumb) if podcast.image? %></div>
          <div class="col-sm-8 podsin">
            <div class="podcastsnowindex"><%= link_to podcast.name, podcast %></div>
          </div>
      <% end %>
      </div>
    </div>
 </div>
   
  <div class="col-sm-2">
    <%= render 'shared/user_mainprofile' %>
  </div>

</div>
