<% provide(:title, 'Search results') %>

<div class="row">

  <div class="col-sm-2 categories">
    <%= render 'shared/categories' %>
  </div>
    
  <div class="col-sm-8">   
    <%= render "media/mcategories" %>
      <div class="allnews">
        <%= render 'tvshows/tvshowsup' %>            
        <div class="tvshowsnow">
          <div class="row">
    <% @tvshow.first(3).each do |tvshow| %><br><br>
      <% if tvshow %>
          <%= link_to tvshow_path(tvshow.id) do %>          
            <div class="col-sm-4 tvshowsin">
              <%= image_tag("#{@configuration.base_url}w154#{tvshow.poster_path}") if tvshow.poster_path %></div>
            <div class="col-sm-8 tvshowin">
              <div class="tvshowsnowindex">
                <%= tvshow.name %> (<%= tvshow.first_air_date.to_date.try(:year) %>) <br /> 
              </div>
          <% end %>             
            </div>
      <% end %>
    <% end %>           
       </div>
    </div>
  </div>
  
</div>