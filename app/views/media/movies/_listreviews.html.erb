<% @movie_reviews.each do |movie_review| %><br>
  <div class="col-sm-3"> 
    <div class="reviewname">
      <%= link_to movie_review.user.name, user_path(movie_review.user) %>
    </div>
    
    <%= image_tag(movie_review.user.smallimage) %>
        <div class="inreviews">
              <%= image_tag("othericons/pointicon.PNG", height: '12', width: '12') %> 
          <b><%= movie_review.user.movie_reviews.count * 5 %></b><br >
              <%= image_tag("othericons/writeRev.png", height: '12', width: '12') %> 
          <b><%= movie_review.user.movie_reviews.count %></b>
        </div>   
  </div>
      
    <div class="col-sm-9 podreview"> 
      <div class="separatereview">
      <b><%= movie_review.title %>:</b> <br>  
        <div class="moviereviewcontent">
          <%= movie_review.content %>
        </div><br><br><br>
      </div><br>
    </div>
<% end %>