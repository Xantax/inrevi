<% provide(:title, @user.first_name) %>

<div class="row">
  
  <div class="col-sm-3 usershow">
    <%= render 'shared/user_info' %>
  </div>
  
  <div class="col-sm-6 usershow"> 
   
    <% if @activities.empty? %>
    <div class="noreviews usershow">No reviews here :(</div>    
    <% else %>
    
      <% @activities.each do |activity| %>
        <div class="activity">
          <%= render_activity activity %>
        </div>
      <% end %>
    
    <% end %>
    
  </div>
  
  <div class="col-sm-3">
  </div>
  
</div>
