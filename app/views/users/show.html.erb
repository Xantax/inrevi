<% provide(:title, @user.first_name) %>

<div class="row">
  
  <div class="col-sm-3 usershow">
    <%= render 'shared/user_info' %><br>
    
    <% if allow? "users", "edit" %>
    <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
    
  </div>
  
  <div class="col-sm-7 usershow"> 
   
    <% if @activities.empty? %>
    <div class="noreviews usershow">No reviews here :(</div>    
    <% else %>
    
      <% @activities.each do |activity| %>
        <div class="activity">
          <%= render_activity activity %>
        </div>
      <% end %>
    
    <% end %>
    
  </div>
  
  <div class="col-sm-2">
    <%= render 'follow_form' if signed_in? %>
  </div>
  
</div>
