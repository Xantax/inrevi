<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/main_error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control autotitle" %><br><br>

      <%= f.label :email %>
      <%= f.text_field :email, :class => "form-control autotitle" %><br><br>

      <%= f.label :password %>
      <%= f.password_field :password, :class => "form-control autotitle" %><br><br>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, :class => "form-control autotitle" %><br><br>
    
    <%= image_tag("othericons/PhotoShow.PNG") %>
    <%= f.file_field :image, :class => "podcastnew" %><br><br>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    
    <%= f.hidden_field :provider, :value => "email" %>
    <% end %>
  </div>
</div>