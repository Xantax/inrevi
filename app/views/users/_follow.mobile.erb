<%= form_for(current_user.relationships.build(followed_id: @user.id),
             remote: true) do |f| %>
  <div><%= f.hidden_field :followed_id %></div>
<div align="left" class="follow-button">
  <%= f.submit "Follow", class: "btn btn-large btn-primary", :onclick => "this.disabled = true" %>
</div>
<% end %>
