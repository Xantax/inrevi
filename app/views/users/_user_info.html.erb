<% if current_user ||= @user %>

      <strong>
        <%= link_to user_path(current_user) do %>   
         <div class="unameonshow">
           <%= current_user.name %>
         </div>
     <% end %>
      </strong><br>

           <% if current_user.image.blank? %>
               <%= image_tag("grey_star.PNG", class: 'img-thumbnail') %>
             <% else %>
               <%= image_tag(current_user.image_url(:thumb), class: 'img-thumbnail') %>
          <% end %>
<% end %>

    <% if current_user?(@user) %>
      <div class="logoutlink">
        <%= image_tag("othericons/PhotoShow.PNG", width: '14', height: '14') %>
        <%= link_to "change image", edit_user_path(@user) %>
      </div>
    <% end %>

     <hr><%= render 'shared/stats' %>


