<div class="row">
  <% @song_reviews.each do |song_review| %>
    <div class="col-sm-3">
      <%= link_to user_path(song_review.user) do %> 
        <%= song_review.user.first_name %><br>
      <% end %>
      <%= image_tag(song_review.user.image, width: "80") %>
    </div>
    <div class="col-sm-9">
      <%= song_review.point %> - <b><%= song_review.title %></b><br>
      <%= song_review.content %><br>
      <% song_review.review_images.each do |pic| %>
         <%= link_to image_tag(pic.image_url(:review_thumb)), pic.image_url, target: :_blank if pic.image?  %>
      <% end %><br><br>
      <%= song_review.get_upvotes.size %> | <%= song_review.get_downvotes.size %>
      <%= link_to 'Delete', song_song_review_path(song_review.song_id, song_review),
               method: :delete,
               data: { confirm: 'Are you sure?'},
               class: "btn btn-primary" %>

      <hr>
    </div>
  <% end %>
</div>