<hr>
  <%= form_tag songs_search_path, method: :get, :html => { :class => 'form-horizontal' } do %>
      <div class="searchbox mobile">
        <%= text_field_tag :query, params[:query], placeholder: 'by name, artist or album...', class: "form-control" %>
      </div>
      <div class="searchgo">
        <span class="input-group-btn">
          <%= submit_tag "Go", class: "btn btn-default" %>
        </span>
      </div>
  <% end %>
