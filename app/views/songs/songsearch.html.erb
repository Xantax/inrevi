<%= form_tag songs_search_path, method: :get, :html => { :class => 'form-horizontal' } do %>
  <div class="form-actions">
    <%= text_field_tag :query, params[:query], placeholder: 'by name, artist or album...', class: 'autosearchbutton', :onfocus => "this.placeholder = ''" %>
    <div class="searchstyle"><%= image_submit_tag("searchbutton.PNG", height: '20', width: '20' ) %></div>
  </div>
<% end %>