<%= form_for @contact_form do |f| %>
 
  <% if @contact_form.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @contact_form.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <b>Name / Company</b><br>
    <%= f.text_field :name, :class => "form-control mobiletitle" %><br><br>

    <%= f.label :email %><br>
    <%= f.text_field :email, :class => "form-control mobiletitle" %><br><br>

    <%= f.label :category %><br>
    <%= f.text_field :category, :class => "form-control mobiletitle", :placeholder => "e.g advertising, reporting a bug" %><br><br><br>

    <%= f.label :message %><br>
    <%= f.text_area :message, :class => "form-control mobilecontent" %><br><br>

    <% if can? :destroy, ContactForm %>
      <%= f.label :read %><br>
      <%= f.check_box :read %><br><br>
    <% end %>

    <div class="actions">
      <%= f.submit " Submit ", :class => "btn btn-primary", :onclick => "this.disabled = true" %>
    </div>
 
<% end %>