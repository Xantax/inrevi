<div class="row autoup"> 
  <div class="col-sm-3"> 
    <%= link_to image_tag(@auto.image_url(:thumb)), @auto.image_url, target: :_blank if @auto.image? %> 
  </div> 
  
   <div class="col-sm-5 autoshow"> 
     <b><%= @auto.name.truncate(80, omission: '...') %></b> <br><br>
      <div class="r-clickfeature">
        <%= link_to "additional info", "#" %><br><br>
      </div>
  
  </div>
  
  <div class="col-sm-4">
    
    <%= image_tag('othericons/writeRev.png', height: '16', width: '16') %>
    <div class="writeareview">
      <%= link_to "Write a Review", new_auto_auto_review_path(@auto) %>
    </div>
    
     <div>
       <hr>
       <%= render 'show_rating' %>
     </div>
    
  </div>
  
</div> <br>

<div class="r-productfeature">
  <%= simple_format(@auto.additionalinfo) if @auto.additionalinfo.present? %><hr>
</div>

<script type="text/javascript">
  $('.r-clickfeature').on('click', function(e) {
  return $(".r-productfeature").slideToggle();
});
</script>